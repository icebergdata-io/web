{
  "version": 2,
  "buildCommand": "npm run build:all",
  "outputDirectory": "dist",
  "framework": "vite",
  "github": {
    "enabled": true,
    "silent": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/contact",
      "destination": "/api/contact"
    }
  ],
  "env": {
    "resend_api_key": "@resend_api_key",
    "NODE_ENV": "production"
  }
} 